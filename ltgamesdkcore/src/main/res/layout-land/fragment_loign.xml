<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_400"
    android:layout_height="@dimen/dp_248"
    android:layout_gravity="center"
    android:background="@drawable/bg_fragment"
    android:gravity="center">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:text="@string/text_login"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_ways"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_title"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_6"
        android:gravity="center"
        android:text="@string/text_login_way"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/sp_10" />

    <LinearLayout
        android:id="@+id/lyt_login_facebook"
        android:layout_width="@dimen/dp_170"
        android:layout_height="@dimen/dp_28"
        android:layout_below="@+id/txt_ways"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/btn_blue_14_corner"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_14">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp_2"
            android:src="@drawable/facebook" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_weight="1"
            android:text="@string/text_facebook"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lyt_login_wx"
        android:layout_width="@dimen/dp_170"
        android:layout_height="@dimen/dp_28"
        android:visibility="gone"
        android:layout_below="@+id/txt_ways"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/btn_green_14_corner"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_14">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center"
            android:padding="@dimen/dp_2"
            android:src="@drawable/wechat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:text="@string/text_wx"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_login_google"
        android:layout_width="@dimen/dp_170"
        android:layout_height="@dimen/dp_28"
        android:layout_below="@+id/lyt_login_facebook"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/btn_blue_14_google_corner"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_14">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp_2"
            android:src="@drawable/google" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/text_google"
            android:textAllCaps="false"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/sp_10" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/lyt_login_qq"
        android:layout_width="@dimen/dp_170"
        android:layout_height="@dimen/dp_28"
        android:layout_below="@+id/lyt_login_wx"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_8"
        android:visibility="gone"
        android:background="@drawable/btn_qq_14_corner"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_14">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center"
            android:padding="@dimen/dp_2"
            android:src="@drawable/qq" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/text_qq"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_10" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_abroad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lyt_login_google"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txt_abroad_visitor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/text_login_visitor"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:layout_width="@dimen/dp_1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@color/colorLine"
            android:gravity="center"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/txt_abroad_email"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/text_login_email"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/sp_11" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lyt_home"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lyt_login_qq"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txt_home_visitor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/text_login_visitor"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:layout_width="@dimen/dp_1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@color/colorLine"
            android:gravity="center"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/txt_home_email"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/text_login_email"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/sp_11" />
    </LinearLayout>

</RelativeLayout>
